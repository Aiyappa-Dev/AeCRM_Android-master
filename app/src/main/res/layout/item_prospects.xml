<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/color_white"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prospect_name"
            android:textColor="@color/black_name"
            android:text="@string/paladin_web"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/_8942"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="?android:textAppearanceLarge" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lorem_ipsum"
                android:textColor="@color/sub_title"
                android:alpha="0.8"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/lorem_ipsum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/prospect_name"
                />
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                android:id="@+id/thumbs_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lorem_ipsum"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/todo"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sync"
                app:srcCompat="@drawable/ic_sync_black_24dp"
                app:layout_constraintTop_toBottomOf="@+id/lorem_ipsum"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/thumbs_up"
                android:contentDescription="@string/todo"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calendar"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_date_range_black_24dp"
                app:layout_constraintTop_toBottomOf="@+id/lorem_ipsum"
                app:layout_constraintStart_toEndOf="@+id/sync"
                android:scaleType="fitXY"
                android:layout_margin="10dp"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_search_black_24dp"
                app:layout_constraintTop_toBottomOf="@+id/lorem_ipsum"
                app:layout_constraintStart_toEndOf="@id/calendar"
                android:scaleType="fitXY"
                android:layout_margin="10dp"/>
        <androidx.appcompat.widget.AppCompatImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:contentDescription="@string/todo"
                  android:id="@+id/assignment"
                  app:layout_constraintTop_toBottomOf="@id/lorem_ipsum"
                 app:srcCompat="@drawable/ic_assignment_black_24dp"
                 app:layout_constraintStart_toEndOf="@id/search"
                 android:scaleType="fitXY"
                 android:layout_margin="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:id="@+id/weather"
                android:textColor="@color/color_white"
                android:textAllCaps="true"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="end|bottom"
                android:gravity="center"
                android:text="@string/hot"/>
</androidx.cardview.widget.CardView>