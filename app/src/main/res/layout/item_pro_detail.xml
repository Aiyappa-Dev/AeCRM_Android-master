<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/lin_id_zero"
                  android:orientation="horizontal"
    >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/service_a2bc6"
                  android:textColor="@color/black_name"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        />


    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc_id"
            android:layout_margin="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_below="@+id/lin_id_zero"
            android:textColor="@color/black_name"
            android:text="@string/item_desc"
    />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc_id"
                android:id="@+id/lin_id_one"
                android:weightSum="1"
        >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.23"
                    android:id="@+id/day_id"
                    android:textColor="@color/black_name"
                    card_view:layout_constraintStart_toEndOf="@id/img_profile"
                    android:text="QTY 5"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.44"
                    android:gravity="center"
                    android:id="@+id/header_id"
                    android:textColor="@color/black_name"
                    android:text="UNIT PRICE $100"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:id="@+id/time_id"
                    android:textColor="@color/black_name"
                    android:alpha="0.6"
                    android:text="TOTAL PRICE $500"
            />

        </LinearLayout>





</RelativeLayout>